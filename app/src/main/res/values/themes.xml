<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Windows98Theme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/windows98_background</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:background">@drawable/black_border</item>
        <item name="android:buttonStyle">@style/Windows98ButtonStyle</item>
    </style>

    <style name="Windows98ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/windows98_button_background</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/font</item>
    </style>

    <style name="Windows98TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/font</item>
    </style>
</resources>